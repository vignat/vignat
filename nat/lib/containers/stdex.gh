  requires true == subset(xs, ys) &*&
           false == mem(el, xs);
  ensures true == subset(xs, remove(el, ys));
  {
    switch(xs) {
      case nil: return;
      case cons(h,t):
        neq_mem_remove(h, el, ys);
        remove_subset(t, el, ys);
    }
